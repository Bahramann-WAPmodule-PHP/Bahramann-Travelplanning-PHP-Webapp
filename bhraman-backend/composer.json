{
  "name": "bhraman-backend",
  "description": "Backend for Bhraman travel planning application",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.0",
    "firebase/php-jwt": "^5.0",
    "vlucas/phpdotenv": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "src\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit"
  }
}